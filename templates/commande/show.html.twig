{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ commande.quantity }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ commande.total }}</td>
            </tr>
            <tr>
                <th>DateCommande</th>
                <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
            <tr>
                <th>NomClient</th>
                <td>{{ commande.nomClient }}</td>
            </tr>
            <tr>
                <th>TelephoneClient</th>
                <td>{{ commande.telephoneClient }}</td>
            </tr>
            <tr>
                <th>EmailClient</th>
                <td>{{ commande.emailClient }}</td>
            </tr>
            <tr>
                <th>AdresseClient</th>
                <td>{{ commande.adresseClient }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_commande_index') }}">back to list</a>

    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">edit</a>

