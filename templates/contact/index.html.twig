{% extends 'base.html.twig' %}


{%  block stylesheets  %}

    <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  <link rel="stylesheet" href="{{ asset('styles/app.css') }}">

  {% endblock %}


{% block body %}

    <div class="row text-center">

        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
            {{ form_errors(form) }}
        </div>
    
        <div class="row">
            <div class="col-9 mx-auto mb-2 mt-4">
                {{ form_row(form.nom, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="col-9 mx-auto mb-2">
                {{ form_row(form.prenom, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="col-9 mx-auto mb-2">
                {{ form_row(form.email, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="col-9 mx-auto mb-2">
                {{ form_row(form.adresse, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="col-9 mx-auto mb-2">
                {{ form_row(form.telephone, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
            <div class="col-9 mx-auto mb-2">
                {{ form_row(form.message, {'attr': {'class': 'form-control text-left'}}) }}
            </div>
    
        </div>
        {{ form_end(form) }}
    </div>
    {% endblock %}